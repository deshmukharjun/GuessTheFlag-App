<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E2E2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Guess The Flag"
            android:textAlignment="center"
            android:textColor="#384D48"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/streak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/montserrat"
            android:text="Streak: 0"
            android:textAlignment="center"
            android:textColor="#384D48"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/in" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal"
            android:paddingLeft="128dp"
            android:paddingTop="16dp"
            android:paddingRight="128dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_button_background"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/hint_icon" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_button_background"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/skip_icon" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="BALLS"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat"
                style="@style/CustomButton" />

            <Button
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="BALLS"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat"
                style="@style/CustomButton" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="BALLS"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat"
                style="@style/CustomButton" />

            <Button
                android:id="@+id/button4"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="BALLS"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat"
                style="@style/CustomButton" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>